---
import { storyblokEditable } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

const { blok ,Image} = Astro.props



---


  <div class="relative w-full h-64" {...storyblokEditable(blok)}>
    <img src={blok.Image?.filename} class="w-full h-full object-cover" />
    
    <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 text-white">
      
      <h2 class="text-3xl font-bold">{blok.headline}</h2>-
      <h2 class="text-3xl font-bold">{blok.discoverfuture}</h2>
      <div>
        {
          blok?.content && blok?.content.length>0 && blok?.content.map((blok) => {
            return <StoryblokComponent blok={blok} />
          })
        }
      </div>
      
    </div>
  </div>
  
  

