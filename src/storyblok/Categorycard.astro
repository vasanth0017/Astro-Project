---
import { storyblokEditable } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'

const { blok  } = Astro.props


---



  
 
    
    <div {...storyblokEditable(blok)} class="max-w-sm bg-white rounded-lg w-full shadow-md overflow-hidden">
        
        <img src={blok.image.filename} alt={blok.image.alt || "Storyblok Image"} class="w-full h-48 object-cover" />
      
       
        <div class="p-4">
          <h3 class="text-lg font-semibold text-gray-800">{blok.headline}</h3>
          <p class="text-gray-600 mt-1">{blok.subheadline}</p>
          <div class="flex items-center justify-between mt-4">
            <span class="text-xl font-bold text-green-500">{blok.description}</span>
            
            
            <div class="flex items-center space-x-2">
              {
                blok?.content && blok?.content.length>0 && blok?.content.map((blok) => {
                  return <StoryblokComponent blok={blok} />
                })
              }       
              
            </div>
          </div>
        </div>
      </div>

  


