---
import { storyblokEditable } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'
import Counter from './react/Counter';

const { blok } = Astro.props


---

<div {...storyblokEditable(blok)}>
    <div class="max-w-sm bg-white rounded-lg shadow-md overflow-hidden">
        <!-- Food Image -->
        <img src={blok.images.filename} alt={blok.images.alt || "Storyblok Image"} class="w-full h-48 object-cover" />
      
        <!-- Food Content -->
        <div class="p-4">
          <h3 class="text-lg font-semibold text-gray-800">{blok.title}</h3>
          <p class="text-gray-600 mt-1">{blok.describe}</p>
          <div class="flex items-center justify-between mt-4">
            <span class="text-xl font-bold text-green-500">{blok.price}</span>
            
            
            <div class="flex items-center space-x-2">
                        <span class="text-lg font-semibold"><Counter client:visible /></span> 
              
            </div>
          </div>
        </div>
      </div>
</div>
